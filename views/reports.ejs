<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Attendance Reports</title>
    <style>
      /* Google Font */
      @import url("https://fonts.googleapis.com/css2?family=Big+Shoulders:opsz,wght@10..72,100..900&family=Josefin+Sans:ital@0;1&family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

      /* General Styling */
      body {
        font-family: "Josefin Sans", sans-serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
        background: linear-gradient(135deg, #000000, #2a0034, #000000);
        color: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
        text-align: center;
        padding: 20px;
      }

      h1 {
        font-size: 2.5rem;
        margin-bottom: 20px;
        font-weight: 600;
      }

      h2 {
        margin-top: 20px;
        font-size: 1.8rem;
        color: #d63384;
        border-bottom: 2px solid #d63384;
        display: inline-block;
        padding-bottom: 5px;
      }

      table {
        width: 80%;
        max-width: 700px;
        border-collapse: collapse;
        margin: 20px 0;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      }

      th,
      td {
        padding: 12px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        text-align: center;
      }

      th {
        background: rgba(255, 255, 255, 0.2);
        font-weight: 600;
      }

      td {
        font-size: 1rem;
      }

      a {
        display: inline-block;
        background: rgba(255, 255, 255, 0.1);
        padding: 12px 20px;
        border-radius: 8px;
        color: #d63384;
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: 500;
        transition: 0.3s;
        background: #000000;
        color: white;
        transform: scale(1.25);
      }
      a:hover {
        transform: scale(1);
        transition: transform 1s, color 0.5s, background-color 0.5s;
        color: #2a0034;
        background-color: white;
      }
    </style>
  </head>
  <body>
    <h1>Attendance Reports</h1>
    <% subjects.forEach(subject => { %>
    <h2><%= subject %> Attendance</h2>
    <table>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Attendance</th>
      </tr>
      <% students.forEach((student, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= student.name %></td>
        <td>
          <% let totalPresent = student.attendance[subject]?.filter(a =>
          a.status === "Present").length || 0; %> <% let totalClasses =
          student.attendance[subject]?.length || 0; %> <% let percentage =
          totalClasses > 0 ? ((totalPresent / totalClasses) * 100).toFixed(2) +
          "%" : "No Data"; %> <%= percentage %>
        </td>
      </tr>
      <% }); %>
    </table>
    <% }); %>
    <a href="/">Back</a>
  </body>
</html>
